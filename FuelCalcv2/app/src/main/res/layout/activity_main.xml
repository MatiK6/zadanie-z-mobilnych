<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:foregroundTint="#E91E63"
    android:foregroundTintMode="multiply"

    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-16dp"
    tools:layout_editor_absoluteY="-60dp">


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/frameLayout"
        android:layout_width="395dp"
        android:layout_height="471dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:layoutDescription="@xml/activity_main_xml_framelayout_scene"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/Max_fuel"
            android:layout_width="387dp"
            android:layout_height="44dp"

            android:layout_marginTop="9dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="288dp"

            android:layout_height="33dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="49dp"
            android:gravity="center"
            android:text="Race length:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="40dp"

            android:layout_height="44dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="Min"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Minutes"
            app:layout_constraintStart_toEndOf="@+id/Hours"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="40dp"
            android:layout_height="44dp"

            android:layout_marginStart="8dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="Hrs"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Hours"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/Hours"
            android:layout_width="131dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/Minutes"
            android:layout_width="175dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="388dp"

            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="Laptime:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="40dp"

            android:layout_height="44dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="Min"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Minutes_laptime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="40dp"

            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="Ms"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Miliseconds_laptime"
            app:layout_constraintStart_toEndOf="@+id/Second_laptime"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/Second_laptime"

            android:layout_width="100dp"

            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="40dp"

            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:text="Sec"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/Second_laptime"
            app:layout_constraintStart_toEndOf="@+id/Minutes_laptime"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/Minutes_laptime"
            android:layout_width="64dp"
            android:layout_height="44dp"

            android:layout_marginTop="2dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/Miliseconds_laptime"
            android:layout_width="98dp"

            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="261dp"

            android:layout_height="28dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="74dp"
            android:gravity="center"
            android:text="Fuel Usage (L/PER LAP):"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/Calc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="146dp"
            android:layout_marginBottom="5dp"
            android:text="Calculate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Max_fuel" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Maximum amount of fuel in tank:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fuel_usage" />

        <EditText
            android:id="@+id/Fuel_usage"
            android:layout_width="387dp"
            android:layout_height="44dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"

        android:layout_width="357dp"
        android:layout_height="60dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/frame_layout2_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:id="@+id/textViewLapCount"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="60dp"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            android:text="FUEL STRATEGY"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"

        android:layout_width="357dp"
        android:layout_height="193dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/frame_layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <TextView
            android:id="@+id/textViewSTINT"
            android:layout_width="216dp"

            android:layout_height="24dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text=" "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAVG"
            android:layout_width="329dp"

            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSTINT" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="352dp"

            android:layout_height="54dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAVG" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>
